<div class="container">
  <header class="page-header">
    <h1>Schadensmeldung: Kraftfahrt</h1>
  </header>

  <form action="/damage" method="post" class="form-horizontal">
    {{# preallocation }}
      <input name="partner-id" type="hidden" value="{{ partnerId }}">

      <div class="form-group">
        <label for="contract-id" class="col-sm-2 control-label">Versicherungsnummer</label>
        <div class="col-sm-10">
          <input name="contract-id" type="text" class="form-control" value="{{ contractId }}">
        </div>
      </div>

      {{# address }}
        <div class="form-group">
          <label for="street" class="col-sm-2 control-label">Street</label>
          <div class="col-sm-10">
            <input name="street" type="text" class="form-control" value="{{ street }}">
          </div>
        </div>
        <div class="form-group">
          <label for="postal" class="col-sm-2 control-label">Postal</label>
          <div class="col-sm-10">
            <input name="postal" type="text" class="form-control" value="{{ postal }}">
          </div>
        </div>
        <div class="form-group">
          <label for="city" class="col-sm-2 control-label">City</label>
          <div class="col-sm-10">
            <input name="city" type="text" class="form-control" value="{{ city }}">
          </div>
        </div>
        <div class="form-group">
          <label for="district" class="col-sm-2 control-label">Stadtteil</label>
          <div class="col-sm-10">
            <input name="district" type="text" class="form-control" value="{{ district }}">
          </div>
        </div>
      {{/ address }}
    {{/ preallocation }}

    <div class="form-group">
      <label for="district" class="col-sm-2 control-label">Schaden</label>
      <div class="col-sm-10">
        <textarea name="district" class="form-control" value="{{ district }}"></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Schaden melden</button>
      </div>
    </div>
  </form>
</div>
